<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/player_swipe_fragment"
        android:name="ru.espepe.bubuka.player.fragment.PlayerFragment"

        android:layout_weight="50"
        tools:layout="@layout/fragment_player"
        android:layout_above="@+id/fragment_main"
        android:layout_toLeftOf="@+id/frameLayout"
        android:layout_toStartOf="@+id/frameLayout" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="ru.espepe.bubuka.player.fragment.MainFragment"
        android:id="@+id/fragment_main"
        android:layout_weight="50"
        tools:layout="@layout/fragment_main"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/frameLayout"
        android:layout_toStartOf="@+id/frameLayout" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/frameLayout"
        android:background="#aaaaaa"></FrameLayout>
</RelativeLayout>