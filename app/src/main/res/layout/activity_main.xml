<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/player_previous_button"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подключение:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/player_previous_button"
        android:layout_toEndOf="@+id/player_previous_button"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Синхронизация:"
        android:id="@+id/textView2"
        android:layout_toEndOf="@+id/player_previous_button"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/icon_3g"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_play_button"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toStartOf="@+id/button"
        android:src="@drawable/sync_icon"
        android:layout_alignTop="@+id/textView2"
        android:layout_toLeftOf="@+id/button"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подключено"
        android:id="@+id/textView3"
        android:layout_toEndOf="@+id/player_play_button"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/tableLayout"
        android:layout_alignEnd="@+id/tableLayout"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30.06.14 13:17"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Демо-версия"
        android:id="@+id/textView5"
        android:layout_below="@+id/player_previous_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/player_previous_button"
        android:layout_alignEnd="@+id/player_previous_button"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginLeft="18dp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/player_previous_button"
        android:background="#ffd8d7da"
        android:showDividers="beginning|middle|end"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1/1"
                android:id="@+id/textView6"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="25/849"
                android:id="@+id/textView7"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="10/32"
                android:id="@+id/textView8"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:id="@+id/textView9"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ролики"
                android:id="@+id/textView10"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Музыка"
                android:id="@+id/textView11"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Фото"
                android:id="@+id/textView12"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="2" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Видео"
                android:id="@+id/textView13"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>
    </TableLayout>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="ru.espepe.bubuka.player.PlayerFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_player"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button" />

</RelativeLayout>
