<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.espepe.bubuka.player.PlayerFragment">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/player_control_layout">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/player_previous_button"
            android:background="@android:drawable/ic_media_rew"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/player_play_button"
            android:layout_toStartOf="@+id/player_play_button"
            android:layout_marginRight="33dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/player_next_button"
            android:background="@android:drawable/ic_media_ff"
            android:layout_toEndOf="@+id/player_play_button"
            android:layout_marginLeft="33dp"
            android:layout_alignTop="@+id/player_play_button"
            android:layout_toRightOf="@+id/player_play_button" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/player_play_button"
            android:background="@android:drawable/ic_media_play"
            android:layout_alignTop="@+id/player_previous_button"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/player_surface"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>
